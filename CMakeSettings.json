{
	//
	// Define reusable env vars
	//
	"environments": [
		{ "projectName" : "QmlDev" }
	],

	//
	// Supported configurations
	//
	"configurations": [
		{
			"name": "Release",
			"generator": "Ninja",
			"inheritEnvironments": [ "msvc_x64_x64" ],
			"configurationType": "Release",
			"cmakeCommandArgs": "-DCMAKE_INSTALL_PREFIX=${workspaceRoot}\\..\\Installs\\${env.projectName}\\vs2019\\${name}",
			"buildRoot": "${workspaceRoot}\\..\\Builds\\${env.projectName}\\vs2019\\${name}"
		},
		{
			"name": "RelWithDebInfo",
			"generator": "Ninja",
			"inheritEnvironments": [ "msvc_x64_x64" ],
			"configurationType": "RelWithDebInfo",
			"cmakeCommandArgs": "-DCMAKE_INSTALL_PREFIX=${workspaceRoot}\\..\\Installs\\${env.projectName}\\vs2019\\${name}",
			"buildRoot": "${workspaceRoot}\\..\\Builds\\${env.projectName}\\vs2019\\${name}"
		},
		{
			"name": "Debug",
			"generator": "Ninja",
			"inheritEnvironments": [ "msvc_x64_x64" ],
			"configurationType" : "Debug",
			"cmakeCommandArgs": "-DCMAKE_INSTALL_PREFIX=${workspaceRoot}\\..\\Installs\\${env.projectName}\\vs2019\\${name}",
			"buildRoot": "${workspaceRoot}\\..\\Builds\\${env.projectName}\\vs2019\\${name}"
		}
	]
}
